<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/welcome_to_mathstore"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CDcalculator"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/grayshape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_light"
            android:text="@string/des_calculators"
            android:layout_margin="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="276dp"
            android:layout_height="50dp"
            android:background="@drawable/grayshape2"
            android:fontFamily="@font/lato_regular"
            android:text="@string/calculators"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CDformula"
        app:cardBackgroundColor="@color/cod_gray"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/grayshape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CDcalculator"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formulaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_light"
            android:text="@string/shapedes"
            android:layout_margin="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="276dp"
            android:layout_height="50dp"
            android:background="@drawable/teakshape"
            android:fontFamily="@font/lato_regular"
            android:text="get started "
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="20dp" />


    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>